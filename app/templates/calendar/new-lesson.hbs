{{#bootstrap-modal title="new lesson" ok='save' close='close'}}
	<div class="lesson-form">

		Lesson stuff - comments, level <br />

		Type: {{ select-2 content=lessonTypes value=lessonType optionLabelPath="type" placeholder="Lesson type" cssClass="lesson-type"}}

		date: {{ lesson-pikaday value=date }} <br />

		start time: {{time-picker time=time widthClass="w120" cssClass="start-time"}} <br />
		duration:
		{{select-2 content=durations
					value=model.duration
					optionLabelPath="label"
					placeholder="duration"}}<br />

		Instructor:
		{{select-2
			content=instructors
			value=model.instructor
			optionLabelPath="name"
			cssClass="instructor"}} <br />


		<hr>

        <div class="pupil-list">
			{{#each enrollment in enrollments}}
				<div class="pupil">{{enrollment.pupil.name}}</div>
			{{/each}}
        </div>


		<hr />

		{{#if client.id}}
			{{edit-client client=client}}
		{{else}}
			{{ find-create-client clients=clients currentClient=client }}
		{{/if}}

		<hr />

		{{#if client.id}}
			{{select-2 content=pupils value=pupil optionLabelPath="name" placeholder="Previous pupils" allowClear=true}}
		{{/if}}

		{{pupil-edit pupil=pupil}}

		<button {{action "addPupil"}} class="add-pupil">+</button>
    </div>
{{/bootstrap-modal}}